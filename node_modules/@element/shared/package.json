{
  "name": "@element/shared",
  "version": "1.6.0",
  "description": "Shared functions for Element Libraries",
  "files": [
    "lib/*",
    "scripts/*"
  ],
  "scripts": {
    "build": "rm -rf lib && rollup --config",
    "build:watch": "rm -rf lib && rollup --verbose --config --watch",
    "changelog": "npx standard-version --skip.bump --skip.commit",
    "changelog:major": "standard-version --release-as-major",
    "changelog:minor": "standard-version --release-as-minor",
    "changelog:patch": "standard-version --release-as-patch",
    "eslint:check": "eslint --ext .js --ignore-path .eslintignore .",
    "eslint:fix": "eslint --ext .js --ignore-path .eslintignore . --fix",
    "postinstall": "node ./scripts/postInstall.js",
    "pre-push-test": "npm run eslint:check && npm run prettier:check",
    "prettier:check": "prettier --check '**/*'",
    "prettier:write": "prettier --write '**/*'",
    "release": ". scripts/release.sh --scripts-path ./scripts --build --publish --create-version",
    "release-major": "npm run release -- -v major",
    "release-minor": "npm run release -- -v minor",
    "release-patch": "npm run release -- -v patch",
    "release-premajor": "npm run release -- -v premajor",
    "release-preminor": "npm run release -- -v preminor",
    "release-prepatch": "npm run release -- -v prepatch",
    "release-prerelease": "npm run release -- -v prerelease",
    "reset": "rm -rf node_modules && rm package-lock.json && npm i",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage-watch": "jest --coverage --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run pre-push-test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.platforms.engineering/element/element-shared.git"
  },
  "keywords": [
    "storybook",
    "javascript",
    "element"
  ],
  "author": "Element Team <element-ds@bayer.com>",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime-corejs3": "^7.13.16",
    "change-case": "^4.1.2",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "fs-extra": "^9.1.0",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.31",
    "warning": "^4.0.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.4",
    "@element/browserslist-config": "^1.0.5",
    "@element/eslint-config": "^2.0.4",
    "@element/prettier-config": "^2.0.2",
    "@element/rollup-plugin-external": "^1.0.4",
    "@guanghechen/rollup-plugin-copy": "^1.5.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "husky": "^4.3.0",
    "jest": "^29.2.0",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "jest-watch-typeahead": "^0.4.2",
    "prettier": "^2.7.1",
    "prettier-plugin-sh": "^0.12.8",
    "rollup": "^2.51.1"
  },
  "prettier": "@element/prettier-config/.prettierrc.json",
  "main": "./lib/cjs/utils.bundle.js",
  "module": "./lib/esm/utils.bundle.js",
  "sideEffects": false
}
